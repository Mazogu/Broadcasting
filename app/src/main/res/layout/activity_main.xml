<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micha.broadcastservices.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Sticky"
        android:id="@+id/stickyMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sendSticky"
        android:text="Send a sticky broadcast"
        android:id="@+id/sendSticky"
        app:layout_constraintBottom_toTopOf="@id/sticky"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Intent Service"
        android:onClick="changeActivity"
        android:id="@+id/intent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="changeActivity"
        android:text="Sticky Broadcast"
        android:id="@+id/sticky"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
